                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_button_add"
                                android:drawableStart="@drawable/ic_add_16"
                                android:drawableTint="@color/colorPrimary"
                                android:textSize="14sp"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_weight="1"/>

                    </LinearLayout>

                    <View
                            android:id="@+id/horizontalLine_cardView_breakfast_line_3"
                            style="@style/view_horizontal_line_style"/>

                    <LinearLayout
                            android:id="@+id/relativeLayout_cardView_breakfast_meal_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/cardView_padding"
