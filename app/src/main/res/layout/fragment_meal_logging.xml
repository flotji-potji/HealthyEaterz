                        style="@style/text_view_image_view_subheading_style"/>

                <LinearLayout
                        android:id="@+id/constraintLayout_cardView_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textView_cardView_breakfast_subtitle"
                        android:orientation="vertical">

                    <View
                            android:id="@+id/horizontalLine_cardView_breakfast_line_1"
                            style="@style/view_horizontal_line_style"/>

                    <LinearLayout
                            android:id="@+id/relativeLayout_cardView_breakfast_meal_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/cardView_padding"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/textView_cardView_breakfast_meal_1"
                                android:layout_weight="9"
                                style="@style/text_view_meal_logging_meal_style"/>

                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_button_add"
                                android:drawableStart="@drawable/ic_add_16"
                                android:drawableTint="@color/colorPrimary"
                                android:textSize="14sp"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_weight="1"/>

                    </LinearLayout>

                    <View
                            android:id="@+id/horizontalLine_cardView_breakfast_line_2"
                            style="@style/view_horizontal_line_style"/>

                    <LinearLayout
                            android:id="@+id/relativeLayout_cardView_breakfast_meal_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/cardView_padding"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal">

                        <TextView
