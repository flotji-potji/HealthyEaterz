<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
    </style>

    <style name="text_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">
            @android:style/TextAppearance.Large
        </item>
        <item name="android:background">#AECFFF</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="cardView_style">
        <item name="cardCornerRadius">@dimen/cardView_cornerRadius</item>
        <item name="android:layout_marginTop">@dimen/cardView_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/cardView_marginBottom</item>
    </style>

    <!-- linear layout child of cardView style -->
    <style name="lineaLayout_cardView_style">
        <item name="android:padding">@dimen/cardView_padding</item>
    </style>

    <!-- text style for overlaying text -->
    <style name="text_view_image_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textView_textSize</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <!-- no action bar theme -->
    <style name="NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionBarTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- image view style for card views -->
    <style name="image_view_card_view_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/image_view_card_view_height</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!-- button style supposed to be attached to image view -->
    <style name="button_image_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_round_theme</item>
        <item name="android:text">@string/label_button_add</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">-20dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="text_view_image_view_subheading_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/subtitle_text_view_meal_logging_card_view_info_negative</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- horizontal line view style -->
    <style name="view_horizontal_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/horizontal_line</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="text_view_meal_logging_meal_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/label_meal_logging_template</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>